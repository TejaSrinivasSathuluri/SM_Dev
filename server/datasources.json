{
  "db": {
    "name": "db",
    "connector": "memory"
  },
  "Study_Monitor_Data": {
    "name": "Study_Monitor_Data",
    "connector": "mongodb"
  },
  "container": {
    "name": "container",
    "connector": "loopback-component-storage",
    "provider": "filesystem",
    "root": "./client/uploads"
  },
  "myEmailDataSource": {
    "name": "myEmailDataSource",
    "connector": "mail",
    "transports": [
      {
        "type": "smtp",
        "host": "smtp.gmail.com",
        "secure": true,
        "port": 465,
        "tls": {
          "rejectUnauthorized": false
        },
        "auth": {
          "user": "email@address.com",
          "pass": "password"
        }
      }
]
  }
}
